<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="500.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MovieFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="titleLabel" text="Formulário de Filme" styleClass="title-label">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>
    <GridPane styleClass="form-grid">
        <Label text="Título:" GridPane.rowIndex="0" />
        <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Diretor:" GridPane.rowIndex="1" />
        <TextField fx:id="directorField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Ano:" GridPane.rowIndex="2" />
        <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Gêneros (separados por vírgula):" GridPane.rowIndex="3" />
        <TextField fx:id="genresField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Sinopse:" GridPane.rowIndex="4" />
        <TextArea fx:id="synopsisArea" prefHeight="100.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    </GridPane>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#handleSave" text="Salvar" defaultButton="true" />
        <Button onAction="#handleCancel" text="Cancelar" cancelButton="true" />
    </HBox>
</VBox>