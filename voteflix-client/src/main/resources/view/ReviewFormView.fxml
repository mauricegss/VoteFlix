<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="450.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReviewFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="titleLabel" text="Avaliar Filme" styleClass="title-label" />
    <Label fx:id="movieTitleLabel" text="Filme: [Nome do Filme]" wrapText="true" styleClass="header-label" />
    <GridPane styleClass="form-grid">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="120.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="50.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Nota (1-5):" GridPane.rowIndex="0"/>
        <Label text="Título (Opcional):" GridPane.rowIndex="1"/>
        <Label text="Descrição:" GridPane.rowIndex="2"/>
        <TextField fx:id="titleField" promptText="Título da sua avaliação" GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>
        <TextArea fx:id="descriptionArea" prefHeight="100.0" promptText="Escreva sua avaliação (máx 250 caracteres)"
                  wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Slider fx:id="ratingSlider" blockIncrement="1.0" majorTickUnit="1.0" max="5.0" min="1.0" minorTickCount="0"
                showTickLabels="true" showTickMarks="true" snapToTicks="true" value="3.0" GridPane.columnIndex="1"/>
        <Label fx:id="ratingValueLabel" text="3" GridPane.columnIndex="2" style="-fx-font-weight: bold;"/>
    </GridPane>
    <Label fx:id="statusLabel" textFill="RED" wrapText="true" />
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" text="Salvar Avaliação" defaultButton="true"/>
        <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancelar" cancelButton="true" />
    </HBox>
</VBox>