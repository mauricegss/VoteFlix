<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MyReviewsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Minhas Avaliações" styleClass="title-label" />
    <Label text="Veja todas as avaliações que você já fez." wrapText="true" />
    <Button fx:id="viewReviewsButton" onAction="#handleViewMyReviews" text="Carregar Minhas Avaliações" />
    <Separator prefWidth="200.0">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Separator>
    <Label fx:id="reviewsLabel" managed="false" text="Resultados:" visible="false" styleClass="header-label" />
    <ListView fx:id="myReviewsListView" managed="false" prefHeight="400.0" visible="false" VBox.vgrow="ALWAYS" />
    <Label fx:id="statusLabel" styleClass="status-label" wrapText="true" />
</VBox>