<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<VBox prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MovieDetailController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="titleLabel" text="Título do Filme" wrapText="true">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    <Label fx:id="directorAndYearLabel" text="Diretor (Ano)" />
    <Label fx:id="genresLabel" text="Gêneros" wrapText="true" />
    <Label fx:id="ratingLabel" text="Nota: X/5.0 (Y avaliações)">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Label>
    <Label text="Sinopse:">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Label>
    <TextFlow>
        <Text fx:id="synopsisText" text="Sinopse do filme vai aqui..." />
    </TextFlow>
</VBox>